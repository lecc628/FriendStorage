<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Default Brushes for the FriendStorage-application-->
    <SolidColorBrush x:Key="DefaultForegroundBrush" Color="White"/>
    <SolidColorBrush x:Key="DefaultBackgroundBrush" Color="#555"/>
    <SolidColorBrush x:Key="DefaultBorderBrush" Color="#888"/>

    <SolidColorBrush x:Key="DisabledBorderBrush" Color="Gray"/>
    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="Gray"/>

    <SolidColorBrush x:Key="LabelForegroundBrush" Color="#CCC"/>

    <SolidColorBrush x:Key="ButtonMouseOverBorderBrush" Color="#777"/>
    <SolidColorBrush x:Key="ButtonMouseOverBackgroundBrush" Color="#777"/>
    <SolidColorBrush x:Key="ButtonIsPressedBorderBrush" Color="#777"/>
    <SolidColorBrush x:Key="ButtonIsPressedBackgroundBrush" Color="#999"/>
</ResourceDictionary>